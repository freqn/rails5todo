<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h2>Todos</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= link_to 'New', new_todo_path, class: "action-txt" %><br><br>
    </div>
  </div>
  <%  @recurring_levels.each do |value, count| %>
    <div class="row">
      <div class="col-md-6">
        <%= "You have #{count} priorities at level #{value}"%>
      </div>
    </div>
  <% end %>
  <br>
  <% @todos.each do |todo| %>
    <div class="row">
      <div class="col-md-2 item-txt">
        <%= link_to todo.title, todo_path(todo.id), class: "icon-link" %> 
      </div>
      <div class="col-md-1">
        <div class="col-md-2 item-txt">
          <%= todo.priority_level %> 
        </div>
      </div>
      <div class="col-md-1">
        <%= link_to edit_todo_path(todo[:id]), class: "icon-link" do %>
          <%= fa_icon "edit" %>
        <% end %>

        <%= link_to todo, method: :delete, data: {confirm: "Are you sure you want to remove '#{todo.title}'?"} do %>
          <%= fa_icon "trash" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

