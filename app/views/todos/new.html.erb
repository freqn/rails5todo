<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h2>New Todo</h2>
    </div>
  </div>
  <%= form_for @todo do |f| %>
    <div class="row">
      <div class="col-md-6">
        <%= label_tag(:title, "Title:") %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= f.text_field :title, class: "form-control", :required => true %></br>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= label_tag(:description, "Notes") %> 
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= f.text_area :description, class: "form-control", :required => true %></br>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= f.number_field :priority_level, class: "form-control", :required => true %></br>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= f.submit "Create", {:class=>"btn btn-default"} %>
        <%= link_to "Cancel", root_path, {:class=>"btn btn-default"} %>
      </div>
    </div>
  <% end %>
</div>
