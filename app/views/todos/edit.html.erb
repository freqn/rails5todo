<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h2>Editing <i><%= @todo.title %></i></h2>
    </div>
  </div>
  <%= form_for @todo do |f| %>  
    <div class="row">
      <div class="col-md-4">
        <%= label_tag(:title, "Title:") %>
        <%= f.text_field :title, class: "form-control", :required => true %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <br>
        <%= label_tag(:description, "Notes") %>
        <%= f.text_area :description, class: "form-control", :required => true %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-4">
        <%= label_tag(:priority_level, "Priority") %> 
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= f.number_field :priority_level, min: 0, class: "form-control", :required => true %></br>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <br>
        <%= f.submit "Update", {:class=>"btn btn-default"} %>
        <%= link_to "Cancel", root_path, {:class=>"btn btn-default"} %>
      </div>
    </div>
  <% end %>
</div>


